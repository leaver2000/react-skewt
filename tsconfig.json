{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "lib/*": [
                "lib/*"
            ],
            "hooks/*": [
                "hooks/*"
            ],
            "components/*": [
                "components/*"
            ],
            "controller/*": [
                "controller/*"
            ],
            "route/*": [
                "route/*"
            ],
            "@types": [
                "@types"
            ]
        },
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        // "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        // "noImplicitAny": false,
    },
    "include": [
        "src/**/*",
        "@types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}